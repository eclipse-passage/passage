						<repositories>
							<repository>
								<id>eclipse</id>
								<layout>p2</layout>
								<url>${eclipserun-repo}</url>
							</repository>
						</repositories>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-antrun-plugin</artifactId>
